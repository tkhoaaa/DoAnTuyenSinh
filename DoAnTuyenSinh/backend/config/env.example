# Email Configuration
# ==========================================
# Email Service (gmail, outlook, yahoo, etc.)
EMAIL_SERVICE=gmail

# Email Host (auto-determined by service, but can be overridden)
EMAIL_HOST=smtp.gmail.com

# Email Port (587 for TLS, 465 for SSL)
EMAIL_PORT=587

# Email Security (true for SSL, false for TLS)
EMAIL_SECURE=false

# Email Account (your email address)
EMAIL_USER=your-email@gmail.com

# Email Password (use App Password for Gmail)
EMAIL_PASSWORD=your-app-password

# Email From Name
EMAIL_FROM_NAME=HUTECH Tuyá»ƒn sinh

# Email Security Settings
# ==========================================
# Password reset token expiry time (minutes)
PASSWORD_RESET_EXPIRY=60

# Maximum emails per hour per user
MAX_EMAILS_PER_HOUR=10

# Cooldown between emails (seconds)
EMAIL_COOLDOWN=60

# Email Logging
# ==========================================
# Enable email logging
EMAIL_LOGGING=true

# Save emails to database
EMAIL_SAVE_TO_DB=false

# File Upload Configuration
# ==========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# JWT Configuration (if using JWT)
# ==========================================
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# API Rate Limiting
# ==========================================
